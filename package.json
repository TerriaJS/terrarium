{
  "name": "terrarium",
  "version": "0.1.0",
  "description": "Geospatial visualization application for Australian government and open data.",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "http://github.com/TerriaJS/terrarium"
  },
  "dependencies": {
    "terriajs-server": "git://github.com/TerriaJS/terriajs-server.git"
  },
  "config": {
    "awsProfile": "terria",
    "awsS3PackagesPath": "s3://terrarium-apps",
    "awsRegion": "ap-southeast-2",
    "awsEc2InstanceType": "t2.medium",
    "awsEc2ImageId": "ami-2a644649",
    "awsKeyName": "terria-kring",
    "awsS3ServerConfigOverridePath": "s3://terrarium-apps/privateserverconfig-2016-05-18.json",
    "awsS3ClientConfigOverridePath": "s3://terrarium-apps/privateclientconfig-2016-05-18.json"
  },
  "devDependencies": {
    "babel-eslint": "^6.0.2",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "css-loader": "^0.23.1",
    "ejs": "^2.4.1",
    "eslint": "^2.7.0",
    "eslint-plugin-jsx-control-statements": "2.1.1",
    "eslint-plugin-react": "^4.3.0",
    "extract-text-webpack-plugin": "git://github.com/TerriaJS/extract-text-webpack-plugin#order-undefined-error",
    "file-loader": "^0.8.5",
    "fs-extra": "^0.30.0",
    "generate-terriajs-schema": "^1.2.1",
    "glob-all": "^3.0.1",
    "gulp": "^3.9.1",
    "gulp-jsoncombine": "^1.0.3",
    "gulp-less": "^3.0.5",
    "gulp-rename": "^1.2.2",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-util": "^3.0.7",
    "jsx-control-statements": "3.1.1",
    "less": "^2.6.1",
    "less-plugin-npm-import": "^2.1.0",
    "nationalmap-catalog": "git://github.com/TerriaJS/NationalMap-Catalog",
    "node-notifier": "^4.5.0",
    "node-sass": "^3.4.2",
    "raw-loader": "^0.5.1",
    "react": "0.14.8",
    "react-dom": "0.14.8",
    "redbox-react": "^1.2.3",
    "sass-loader": "^3.2.0",
    "style-loader": "^0.13.1",
    "terriajs": "git://github.com/TerriaJS/terriajs.git#newui",
    "terriajs-catalog-editor": "^0.2.0",
    "terriajs-cesium": "1.20.0",
    "terriajs-schema": "latest",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1",
    "yargs": "^4.7.0"
  },
  "scripts": {
    "start": "bash ./node_modules/terriajs-server/run_server.sh --config-file devserverconfig.json",
    "stop": "bash ./node_modules/terriajs-server/stop_server.sh",
    "postinstall": "echo 'Installation with NPM successful. What to do next:\\n  npm start       # Starts the server on port 3001\\n  gulp watch      # Builds NationalMap and dependencies, and rebuilds if files change.'",
    "hot": "webpack-dev-server --inline --config buildprocess/webpack.config.hot.js --hot",
    "deploy": "rm -rf node_modules && npm install && npm run deploy-without-reinstall",
    "deploy-without-reinstall": "gulp clean && gulp release && npm run deploy-current",
    "deploy-current": "npm run get-deploy-overrides && gulp make-package --serverConfigOverride ./privateserverconfig.json --clientConfigOverride ./wwwroot/privateconfig.json && cd deploy/aws && ./stack create",
    "get-deploy-overrides": "aws s3 --profile $npm_package_config_awsProfile cp $npm_package_config_awsS3ServerConfigOverridePath ./privateserverconfig.json && aws s3 --profile $npm_package_config_awsProfile cp $npm_package_config_awsS3ClientConfigOverridePath ./wwwroot/privateconfig.json"
  }
}
